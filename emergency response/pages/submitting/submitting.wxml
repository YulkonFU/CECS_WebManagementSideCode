<!--pages/submitting/submitting.wxml-->
<view>
  <view style="margin: 10rpx 0;">
    <van-divider hairline="true" contentPosition="center" borderColor="red">危机上报</van-divider>
  </view>
  <view>
  <van-dropdown-menu>
    <van-dropdown-item  value="{{ value1 }}" options="{{ option1 }}" />
    <van-dropdown-item  value="{{ value2 }}" options="{{ option2 }}" />
  </van-dropdown-menu>
  <van-cell-group>
    <van-field label="发生时间" value="{{ event.startTime }}"placeholder="请输入发生时间"bind:change="onChange"/>
    <van-field label="具体位置" value="{{ event.location }}"placeholder="请输入具体位置"bind:change="onChange"/>
    <van-field label="情况描述" value="{{ event.description }}"placeholder="请详细描述问题"bind:change="onChange" autosize border="{{ false }}" type="textarea"/>
  </van-cell-group>
  <view style="text-align: center;margin-top: 50px;">
    <van-row>
      <van-col span="12"><van-button type="warning" bind:click="true1">确认上报</van-button></van-col>
      <van-col span="12"><van-button type="danger" bind:click="true2">响应升级</van-button></van-col>
      <van-dialog show="{{ show }}"  id="van-dialog" />
    </van-row>
  </view>
  </view>
  
</view>
<view>
    <van-tabbar active="{{ active }}" active-color="#07c160" inactive-color="#000" bind:change="onChange" >
    <van-tabbar-item icon="chat-o" bind:click="chat" >应急消息</van-tabbar-item>
    <van-tabbar-item icon="description" bind:click="description">危机上报</van-tabbar-item>
    <van-tabbar-item icon="friends-o" bind:click="friend">个人中心</van-tabbar-item>
    </van-tabbar>
  </view>