<!--pages/submitting/submitting.wxml-->
<view>
  <view style="margin: 10rpx 0;">
    <van-divider hairline="true" contentPosition="center" borderColor="red">危机上报</van-divider>
  </view>
  <view>
  <van-dropdown-menu>
    <van-dropdown-item  model:value="{{ value1 }}" options="{{ option1 }}" />
    <van-dropdown-item  model:value="{{ value2 }}" options="{{ option2 }}" />
  </van-dropdown-menu>
  <van-cell-group>
    <van-field label="发生时间" model:value="{{ startTime }}"placeholder="请输入年-月-日 时:分:秒"bind:change="onChange" bind:blur="checkTime1"/>
    <van-field label="具体位置" model:value="{{ location }}"placeholder="请输入具体位置"bind:blur="check1"/>
    <van-field label="情况描述" model:value="{{ description }}"placeholder="请详细描述问题"bind:blur="check2" autosize border="{{ false }}" type="textarea"/>
  </van-cell-group>
  <view style="text-align: center;margin-top: 50px;">
    <van-button type="warning" bind:click="true1">确认上报</van-button>
    <van-dialog show="{{ show }}"  id="van-dialog" /> 
  </view>
  </view>
  
</view>
<view>
    <van-tabbar active="{{ active }}" active-color="#07c160" inactive-color="#000" bind:change="onChange" >
    <van-tabbar-item icon="chat-o" bind:click="chat" >应急消息</van-tabbar-item>
    <van-tabbar-item icon="description" bind:click="description">危机上报</van-tabbar-item>
    <van-tabbar-item icon="friends-o" bind:click="friend">个人中心</van-tabbar-item>
    </van-tabbar>
  </view>