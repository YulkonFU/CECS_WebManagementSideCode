<!--pages/dutyLeave/dutyLeave.wxml-->
<view>
  <view style="margin:0 auto;">
    <van-divider hairline="true" contentPosition="center" borderColor="orange">值班请假</van-divider></view>
  <view>
    <!-- <van-cell-group>
      <van-cell title="员工编号" value="{{ user.id }}" />
      <van-cell title="员工姓名" value="{{ user.uername }}" />
    </van-cell-group> -->
    <van-cell-group>
    <van-field value="{{ value }}" placeholder="请输入日期" label="请假日期"/>
    <van-field value="{{ value }}" placeholder="请输入请假类型" label="请假类型"/>
    <van-field value="{{ value }}" placeholder="请输入时间" label="请假开始时间"/>
    <van-field value="{{ value }}" placeholder="请输入时间" label="请假结束时间"/>
    <van-field value="{{ message }}" label="请假原因" type="textarea" placeholder="请输入请假原因" autosize/>
    </van-cell-group>
    <view style="margin:20px auto;text-align: center;"><van-button type="primary" bind:click="true">提交</van-button></view>
    <van-dialog show="{{ show }}"  id="van-dialog" />
  </view>
</view>

<view>
  <van-tabbar active="{{ active }}" active-color="#07c160" inactive-color="#000" bind:change="onChange" >
  <van-tabbar-item icon="chat-o" bind:click="chat" >应急消息</van-tabbar-item>
  <van-tabbar-item icon="description" bind:click="description">危机上报</van-tabbar-item>
  <van-tabbar-item icon="friends-o" bind:click="friend">个人中心</van-tabbar-item>
  </van-tabbar>
</view>
