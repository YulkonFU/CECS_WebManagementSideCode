<!--pages/clockIn/clockIn.wxml-->
<view>
  <view style="margin:0 auto;">
    <van-divider hairline="true" contentPosition="center" borderColor="red">值班打卡</van-divider>
  </view>
  <view>
    <van-cell-group>
      <van-cell title="员工编号" model:value="{{ user.id }}" />
      <van-cell title="员工姓名" model:value="{{ user.uername }}" />
      <van-cell title="打卡时间" model:value="{{time}}" />
      <van-cell title="值班地点" model:value="{{ user.uername }}" />
    <van-cell-group>
    <van-field model:value="{{ message }}" label="值班情况" type="textarea" placeholder="请输入值班情况" autosize/></van-cell-group>
    </van-cell-group>
  </view>
  <view style="margin:20px auto;text-align: center;">
    <van-button  bind:click="true" type="primary">打卡</van-button>
    <van-dialog show="{{ show }}"  id="van-dialog" />
  </view>
  
</view>
<view>
    <van-tabbar active="{{ active }}" active-color="#07c160" inactive-color="#000" bind:change="onChange" >
    <van-tabbar-item icon="chat-o" bind:click="chat" >应急消息</van-tabbar-item>
    <van-tabbar-item icon="description" bind:click="description">危机上报</van-tabbar-item>
    <van-tabbar-item icon="friends-o" bind:click="friend">个人中心</van-tabbar-item>
    </van-tabbar>
  </view>